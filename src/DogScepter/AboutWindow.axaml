<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:t="clr-namespace:DogScepter.Localization"
		mc:Ignorable="d"
		Width="500"
		Height="300"
        x:Class="DogScepter.AboutWindow"
        Title="{t:Text about.title}"
		Icon="/Assets/icon.ico">
	<Panel>
		<Border Background="#111111" Padding="15">
			<StackPanel>
				<TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Text="{t:Text about.content}"/>
				<Button HorizontalAlignment="Center" Margin="0,20" Content="{t:Text about.github}" Command="{Binding Menu_GitHub}"/>
			</StackPanel>
		</Border>
	</Panel>
</Window>
